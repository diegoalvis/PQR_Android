<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    

    
    
     <style name="myTheme" parent="android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/myTheme.ActionBar</item>
        <item name="android:actionOverflowButtonStyle">@style/MyActionButtonOverflow</item>
        
        </style>
        
 <style name="MyActionButtonOverflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
    <item name="android:src">@drawable/icon_menu</item>
    <item name="android:background">?android:attr/actionBarItemBackground</item>
    
</style>
    
    <style name="myTheme.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/capas</item>
        <item name="android:titleTextStyle">@style/myTheme.ActionBar.Text</item>
        <item name="android:actionBarItemBackground">@color/White</item>
        
    </style>
    
	
	
	
    <style name="myTheme.ActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="myTheme.Alertdialog" parent="android:Theme.Dialog"> 
      
     <item name="android:textColor">@color/black</item> 
     
     
    </style> 
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    <style name="btnStyleGenoa" parent="@android:style/Widget.Button">
       <item name="android:textSize">10sp</item>
       <item name="android:textStyle">bold</item>
       <item name="android:textColor">#FFFFFF</item>
       <item name="android:gravity">center</item>
       <item name="android:shadowColor">#000000</item>
       <item name="android:shadowDx">1</item>
       <item name="android:shadowDy">1</item>
       <item name="android:shadowRadius">0.6</item>
       <item name="android:background">@drawable/custom_btn_genoa</item>
       <item name="android:padding">1dip</item>
   </style>

</resources>