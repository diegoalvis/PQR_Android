<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_solicitudes_estilo_gmail"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/completo_gmail"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="4dp"
    android:weightSum="100" >

    <!-- Entidad -->


    <!-- Codigo -->


    <!-- Fecha y Hora Creacion -->

    <TextView
        android:id="@+id/tv_solicitudes_eg_icono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:gravity="center"
        android:tag="icono"
        android:text="TextView"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFF" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_weight="70"
        android:background="#00FFFFFF"
        android:gravity="top"
        android:orientation="vertical"
        android:padding="2dp" >

        <TextView
            android:id="@+id/entidad_view"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="#00FFFFFF"
            android:ellipsize="none"
            android:paddingBottom="5dp"
            android:singleLine="false" />

        <LinearLayout
            android:id="@+id/ll_solicitudes_datos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:orientation="horizontal"
            android:weightSum="100" >

            <TextView
                android:id="@+id/tipo_solicitud_view"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="#00FFFFFF"
                android:ellipsize="end"
                android:maxLines="2" />

            

            <TextView
                android:id="@+id/estado_view"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="#00FFFFFF"
                android:ellipsize="none"
                android:paddingBottom="2dp"
                android:scrollHorizontally="false"
                android:textAppearance="?android:attr/textAppearanceSmall" />

        </LinearLayout>

        <TextView
            android:id="@+id/codigo_view"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="#00FFFFFF"
            android:maxLines="1"
            android:paddingBottom="2dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_weight="30"
        android:background="#00FFFFFF"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="2dp" >

        <TextView
            android:id="@+id/fecha_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:padding="2dp" />

        <TextView
            android:id="@+id/hora_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:padding="2dp" />

        <TextView
            android:id="@+id/fechahora_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:text="HOLA" />

    </LinearLayout>

    <!-- Estado -->


    <!-- Objeto -->


    <!-- Respuesta -->

    <TextView
        android:id="@+id/respuesta_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"
        android:textSize="14sp"
        android:visibility="gone" />

</LinearLayout>